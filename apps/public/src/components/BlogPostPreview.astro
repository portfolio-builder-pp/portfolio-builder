---
import type { BlogPostDto } from '@portfolio-builder/shared-types';
import { slugify } from '../utils';
import type { TRPCClient } from '../client';

interface Props {
  post: BlogPostDto;
}
const { post } = Astro.props;
---

<li class="mb-4">
  <h1 class="font-bold">{post.title}</h1>
  <p>{post.content ? `${post.content.slice(0, 50)}...` : 'Pusto'}</p>
  <a href={`/blog/${slugify(post.title)}/${post.id}`}>Przeczytaj</a>
</li>